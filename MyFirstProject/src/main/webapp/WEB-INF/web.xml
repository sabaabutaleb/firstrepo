<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>ticket</servlet-name>
    <servlet-class>org.revature.controller.TicketServlet</servlet-class>
  </servlet>
  <!-- In the servlet mapping tag, we connect the servlet name with a url-pattern -->
  <servlet-mapping>
    <!-- here it is very important that we match what set as the name in the servlet tag -->
    <servlet-name>ticket</servlet-name>
    <url-pattern>/ticket/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>employee</servlet-name>
    <servlet-class>org.revature.controller.EmployeeServlet</servlet-class>
  </servlet>
  <!-- In the servlet mapping tag, we connect the servlet name with a url-pattern -->
  <servlet-mapping>
    <!-- here it is very important that we match what set as the name in the servlet tag -->
    <servlet-name>employee</servlet-name>
    <url-pattern>/employee/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>manager</servlet-name>
    <servlet-class>org.revature.controller.ManagerServlet</servlet-class>
  </servlet>
  <!-- In the servlet mapping tag, we connect the servlet name with a url-pattern -->
  <servlet-mapping>
    <!-- here it is very important that we match what set as the name in the servlet tag -->
    <servlet-name>manager</servlet-name>
    <url-pattern>/manager/*</url-pattern>
  </servlet-mapping>


</web-app>
